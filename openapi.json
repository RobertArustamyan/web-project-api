{
  "openapi": "3.0.3",
  "info": {
    "title": "Search API",
    "description": "An API for searching with a query parameter.\nThis API provides search results with a knowledge graph and organic results.\n",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://request-getting-api.onrender.com"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "summary": "Search with a query parameter",
        "description": "Perform a search operation with a query parameter to get detailed results.\n",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "The search query.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Head": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string",
                          "description": "The title from the knowledge graph."
                        },
                        "description": {
                          "type": "string",
                          "description": "The description from the knowledge graph."
                        },
                        "attributes": {
                          "type": "string",
                          "description": "Additional attributes from the knowledge graph."
                        }
                      }
                    },
                    "Body": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "Title": {
                            "type": "string",
                            "description": "The title of an organic result."
                          },
                          "Link": {
                            "type": "string",
                            "description": "The link of an organic result."
                          },
                          "Trailer": {
                            "type": "string",
                            "description": "The snippet/trailer of an organic result."
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid request parameter"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "Search"
        ]
      }
    }
  }
}